@model Proyecto_Psico.Models.CrudModels.TablaRespuestas

@{
    ViewBag.Title = "nuevo respuestas";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>nuevoRespuestas</title>
</head>
<body>

    <h2>@ViewBag.Title</h2>



    @using (Html.BeginForm("nuevoRespuestas", "Home", FormMethod.Post))
    {
        <div class="row">


            <div class="col-md-12">

                @Html.LabelFor(d => d.Idrespuesta)
                @Html.TextBoxFor(d => d.Idrespuesta, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Idrespuesta, null, new { @class = "danger" })
                <br />

                @Html.LabelFor(d => d.Idusuario)
                @Html.TextBoxFor(d => d.Idusuario, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Idusuario, null, new { @class = "danger" })
                <br />

                @Html.LabelFor(d => d.respuesta)
                @Html.TextBoxFor(d => d.respuesta, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.respuesta, null, new { @class = "danger" })
                <br />

            </div>
            <br />

            <div style="text-align:right">

                <input value="Guardar" class="btn btn-primary" type="submit" />

            </div>


        </div>

    }

    <br />
    <div style="text-align:left">

        <a class="btn btn-primary" href="~/Home/CRUD" role="button">Regresar</a>

    </div>


</body>
</html>
