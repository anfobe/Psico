




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Styles/index2.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/Recursos/psicologia.svg">
    <title>Inicio</title>
</head>


<body>

    @{if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert-warning">@ViewBag.Message</div>
        } }


    <div style="margin-bottom:20%">
        <img class="logosinicio2" src="~/Recursos/Logo Psicología UH editado (1).jpeg" alt="Escuela de Psicología" />
        <img class="logosinicio" src="https://get.mw.cr/c/aurens/content/images/colleges/logos/10.png" alt="Universidad Hispanoamericana">
    </div>

    <form action="~/Home/Index" method="post">
        <div class="login-wrap">
            <div class="login-html">
                <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Ingreso</label>
                <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Registro</label>
                <div class="login-form">
                    <div class="sign-in-htm">
                        <div class="group">
                            <br>
                            <label for="user" class="label" style="margin-top: 15px">Cédula</label>
                            <input id="user" type="text" class="input" name="Cedula">
                            <br>
                            <br>
                        </div>
                        <div class="group">
                            <label for="pass" class="label">Correo</label>
                            <input id="pass" type="text" class="input" name="Correo" />
                        </div>
                        <br>
                        <br>
                        <div class="group">
                            <input type="submit" class="button" style="text-align:center" value="Sign In" name="action">
                        </div>
                        <div class="hr"></div>
                    </div>
                    <div class="sign-up-htm">
                        <div class="group">
                            <label for="user" class="label" style="text-align:left">Nombre</label>
                            <input id="user" type="text" class="input" name="Nombre">
                        </div>
                        <div class="group">
                            <label for="pass" class="label">Apellidos</label>
                            <input id="pass" type="text" class="input" name="Apellidos" />
                        </div>
                        <div class="group">
                            <label for="pass" class="label">Cédula</label>
                            <input id="pass" type="text" class="input" name="Cedula2">
                        </div>
                        <div class="group">
                            <label for="pass" class="label">Correo</label>
                            <input id="pass" type="text" class="input" name="Correo2">
                        </div>
                        <br>
                        <div class="group">
                            <input type="submit" class="button" style="text-align:center" value="Sign Up" name="action">
                        </div>
                        <div class="hr"></div>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <a class="btn btn-primary" href="~/Home/CRUD" role="button">Mantenimiento</a>

</body>
</html>